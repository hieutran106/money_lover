@model Income
@{
    ViewBag.Title = "Edit income";

}
@section scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#form-container input.datepicker[type="text"]').datepicker({
                todayHighlight: true,
                autoclose: true,
                format:'dd/mm/yyyy'

            });
        });
    </script>

}

<div asp-validation-summary="All" class="text-danger"></div>
<form id="form-container" asp-action="Edit" method="post">
    <input type="hidden" asp-for="IncomeId" />
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" asp-format="{0:dd/MM/yyyy}" type="text" class="form-control datepicker" />
    </div>
    <div class="form-group">
        <label asp-for="Category.Name"></label>
        <select class="form-control" asp-for="Category.Name" asp-items="@ViewBag.Categories">
            <option disabled selected value="">Select a Category</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input class="form-control" asp-for="Amount" />
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
</form>
