@model IEnumerable<Income>

<table class="table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>Description</th>
        <th>Date</th>
        <th>Category</th>
        <th>Amount</th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="6" class="text-center">No income</td></tr>
    }
    else
    {
        foreach (Income e in Model)
        {
            <tr>
                <td>@e.IncomeId</td>
                <td>@e.Description</td>
                <td>@e.Date</td>
                <td>@e.Category.Name</td>
                <td>@e.Amount.ToString("c")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@e.IncomeId" class="btn btn-sm btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@e.IncomeId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    }
</table>
<a asp-action="Create" class="btn btn-primary">Add Income</a>