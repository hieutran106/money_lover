@model IEnumerable<Category>
@{
    ViewBag.Title="Category";
}
<table class="table table-sm table-bordered">
    <tr><th>ID</th><th>Category name</th><th></th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">No Category</td></tr>
    }
    else
    {
        foreach (Category category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                
                <td>@category.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-sm btn-secondary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    }
</table>
<a asp-action="Create" class="btn btn-primary">Add Category</a>