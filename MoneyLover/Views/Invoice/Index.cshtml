@model IEnumerable<Invoice>
    @{
    ViewBag.Title="Invoice";
    }
    <table class="table table-sm table-bordered">
        <tr><th>ID</th><th>Created Date</th><th></th></tr>
        @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">No invoice</td></tr>
    }
    else
    {
        foreach (Invoice invoice in Model)
        {
        <tr>
            <td>@invoice.InvoiceId</td>

            <td>@invoice.CreatedDate.ToString("dd/MM/yyyy")</td>
            <td>
                <a asp-action="Download" asp-route-id="@invoice.InvoiceId" class="btn btn-sm btn-secondary">Download</a>
                <a asp-action="Delete" asp-route-id="@invoice.InvoiceId" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
        }
    }
    </table>
    <a asp-action="Create" class="btn btn-primary">Add Category</a>
